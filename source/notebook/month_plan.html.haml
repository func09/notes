- content_for :assets do
  = stylesheet_link_tag "notebook/main", media: :all

#month-planner.page-wrapper{ class: [direction] }
  = partial 'page_index', locals: { month: month }

  %header
    - if direction == :left
      .typo{ class: wday_style_name(month) }
        %span.m
          = month.strftime("%-m")
        %span.y
          = month.strftime("%^b %Y")

  .content
    .grid
      = partial 'svg/section', locals: { section: 4, w: 120, h: 180 }
    - if direction == :left
      %section#planning
        %h2
          PLAN
        .box

      %section#todo
        %h2
          TODO
        .box

    - else
      %section#record
        %h2
          RECORD
        .box
